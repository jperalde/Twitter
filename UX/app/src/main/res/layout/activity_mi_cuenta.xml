<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".miCuenta">
    <ListView
        android:id="@+id/lv"
        android:layout_width="wrap_content"
        android:layout_height="491dp"
        android:layout_marginTop="200dp" />

    <Button
        android:id="@+id/enviarTweet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="60dp"
        android:onClick="btnVolver"
        android:text="Volver" />
    <Button
        android:id="@+id/buscarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"

        android:layout_marginTop="0dp"
        android:onClick="btnBuscar"
        android:text="buscar" />
    <Button
        android:id="@+id/cuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"

        android:layout_marginTop="60dp"
        android:onClick="btnBaja"
        android:text="Dar de Baja" />
    <Button
        android:id="@+id/cambiarpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="120dp"
        android:onClick="btnCambio"
        android:text="Cambiar ContraseÃ±a" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cargar tweets"
        android:onClick="btncargar"
        />


</RelativeLayout>